<Window x:Class="WpfDataBindingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WPF Data Binding Example" Height="150" Width="300">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter Person's Name:"/>
            <TextBox Text="{Binding PersonName, Mode=OneWay}" Width="200" Margin="0,5,0,10"/>
            <TextBlock Text="Name Displayed:"/>
            <TextBlock Text="{Binding PersonName}" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
